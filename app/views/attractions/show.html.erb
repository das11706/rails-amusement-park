

<h2>Please enjoy the <%= @attraction.name %>!</h2>

<% if current_user.admin %>
  <p><%= link_to "Edit Attraction", edit_attraction_path %></p>
<% else %>
  <%= form_for(@ride) do |f| %>
    <%= f.hidden_field :user_id %><br>
    <%= f.hidden_field :attraction_id %><br>
    <%= f.submit "Go on this ride" %>
  <% end %>
<% end %>